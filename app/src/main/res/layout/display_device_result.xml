<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultView"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    android:layout_gravity="center_vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/result_overall_layout"
        android:layout_width="fill_parent"
        android:layout_height="431dp"
        android:padding="6dip">

        <LinearLayout
            android:id="@+id/center_layout"
            android:layout_width="fill_parent"
            android:background="@color/red_500"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/center_relative_layout"
                android:layout_width="fill_parent"
                android:layout_height="278dp"
                android:padding="6dip">

                <ImageView
                    android:id="@+id/device_icon"
                    android:src="@drawable/client"
                    android:layout_marginTop="6dip"
                    android:layout_height="100sp"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="6dip"
                    android:layout_alignTop="@+id/device_name" />

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="6dip"
                    android:layout_height="40dip"
                    android:layout_toRightOf="@id/device_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="38sp"
                    android:text="CT100"
                    android:textColor="@color/card_white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/device_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/device_icon"
                    android:layout_marginTop="8dip"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/device_name"
                    android:layout_alignWithParentIfMissing="true"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="Sierra Madre"
                    android:textStyle="bold"
                    android:textColor="@color/card_white"
                    android:layout_weight="0.61"/>

                <TextView android:id="@+id/device_type"
                    android:layout_marginTop="6dip"
                    android:layout_width="120sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/device_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:textSize="24sp"
                    android:text="Meter"
                    android:textStyle="bold"
                    android:textColor="@color/card_white"
                    android:layout_weight="0.61"
                    android:layout_span="2" />

                <TextView android:id="@+id/connection_state"
                    android:layout_width="200sp"
                    android:layout_height="30sp"
                    android:layout_toRightOf="@id/device_type"
                    android:layout_below="@id/device_location"
                    android:layout_alignTop="@id/device_type"
                    android:visibility="invisible"/>

                <TextView android:id="@+id/space_holder1"
                    android:layout_marginTop="4dip"
                    android:layout_width="120sp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/device_type"
                    android:layout_alignParentLeft="true"
                    android:textSize="24sp"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/card_white"
                    android:layout_weight="0.61"
                    android:layout_span="2" />

                <TextView  android:id="@+id/result_message"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/space_holder1"
                    android:layout_height="200sp"
                    android:textSize="18sp"
                    android:text="Result"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_black"
                    android:background="@color/card_white"
                    android:layout_weight="0.61"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id = "@+id/exitbtnlayout"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content">
            <ImageView
                android:id = "@+id/exitbtnimg"
                android:layout_width = "130dp"
                android:layout_height = "130dp"
                android:layout_marginRight = "20dip"
                android:background = "@drawable/roundedbutton"
                android:text = "EXIT"
                android:textSize = "28sp"
                android:textStyle = "bold"
                android:layout_alignParentBottom = "true"
                android:layout_alignParentRight = "true"/>
            <TextView
                android:id = "@+id/exitbtntext"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_alignLeft = "@+id/exitbtnimg"
                android:layout_alignTop = "@+id/exitbtnimg"
                android:layout_alignRight = "@+id/exitbtnimg"
                android:layout_alignBottom = "@+id/exitbtnimg"
                android:gravity = "center"
                android:text = "EXIT"
                android:textSize = "28sp"
                android:textStyle = "bold"
                android:textColor = "@color/text_black"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

